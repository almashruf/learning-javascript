        //creating javascript function
        function square(){
            var num=7;
            var result = num*num;

            document.write("Result = " +result+"<br>")
        }

        //calling a function

        square();

        //value pass

        function square(num1,num2){
            var result = num1*num2;

            return result;
        }

        //calling a function

        var x = square(6,6)
        document.write(x);

    </script>
